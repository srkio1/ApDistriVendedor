<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABM.Forms.Compra.EditarBorrarCompra">
    <ContentPage.Content>
        <ScrollView>
        <StackLayout>
            <Entry x:Name="idCompraEntry"
                   Text="Id" IsVisible="False"/>

            <Label Text="Nro. Factura"/>
            <Entry x:Name="numero_facturaCompraEntry"
                   Text="Numero de Factura"/>
                <Label Text="Fecha compra"/>

                <DatePicker x:Name="fechaCompraPick"/>

                <Label Text="Precio Unitario"/>
                <Entry x:Name="saldoCompraEntry"
                   Text="Saldo"/>

                <Label Text=" Total"/>
                <Entry x:Name="totalCompraEntry"
               Placeholder="precioTotal"/>

                
                
            
            <Label Text="Nombre Proveedor"/>
            <Entry x:Name="proveedorPEntry"
               Placeholder="Seleccione Proveedor"/>
            
            <Button x:Name="btnEditarComp"
                Text="Editar"
                Clicked="BtnEditarComp_Clicekd"/>
            
            <Button x:Name="btnBorrarComp"
                Text="Borrar"
                Clicked="BtnBorrarComp_Clicked"/>
        </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>