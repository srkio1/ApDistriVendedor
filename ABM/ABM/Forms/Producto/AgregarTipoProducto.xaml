<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABM.AgregarTipoProducto"
             Title=" Agregar Tipo Producto">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Entry x:Name="idproductoentry" IsVisible="False"/>
                <Label Text="Nombre: " HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" FontSize="Medium"/>
            <Entry x:Name="nombreTpEntry" HorizontalOptions="FillAndExpand" Placeholder="Nombre"/>
        </StackLayout>
        <Button x:Name="btnGuardarTP"
                Text="Guardar"
                Clicked="BtnGuardarTP_Clicked"/>
    </StackLayout>
</ContentPage>