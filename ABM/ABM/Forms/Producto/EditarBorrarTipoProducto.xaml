<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABM.EditarBorrarTipoProducto">
    <StackLayout>
        <StackLayout Orientation="Horizontal">
            <Entry Text="idproducto" IsVisible="False" x:Name="idproductosentry"/>
            <Label Text="Nombre: " HorizontalOptions="Start" VerticalOptions="Center" WidthRequest="100" FontSize="Medium"/>
            <Entry x:Name="nombreTpEntry" HorizontalOptions="FillAndExpand" Text="Nombre"/>
        </StackLayout>
        <Button x:Name="btnEditarTP"
                Text="Editar"
                Clicked="BtnEditarTP_Clicked"/>
        <Button x:Name="btnBorrarTP"
                Text="Borrar"
                Clicked="BtnBorrarTP_Clicked"/>
    </StackLayout>
</ContentPage>