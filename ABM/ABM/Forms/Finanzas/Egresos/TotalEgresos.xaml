                                    <Label Text="Diciembre" Grid.Column="12" FontSize="Medium" FontAttributes="Bold" BackgroundColor="Green" TextColor="Black" HorizontalTextAlignment="Center" Margin="0.5"/>
                                    <Label Text="Total" Grid.Column="13" FontSize="Medium" FontAttributes="Bold" BackgroundColor="Green" TextColor="Black" HorizontalTextAlignment="Center" Margin="0.5"/>
                                </Grid>
                            </ListView.Header>

                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
