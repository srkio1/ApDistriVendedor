                                                <ColumnDefinition Width="100"></ColumnDefinition>
                                                <ColumnDefinition Width="100"></ColumnDefinition>
                                                <ColumnDefinition Width="100"></ColumnDefinition>
                                                <ColumnDefinition Width="100"></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Text="{Binding nombre}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="1" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="2" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="3" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="4" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
