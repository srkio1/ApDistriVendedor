                                            <Label Grid.Column="8" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="9" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="10" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="11" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="12" Text="{Binding monto}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
                                            <Label Grid.Column="13" Text="{Binding DisplayMontoTotal}" HorizontalOptions="Fill" BackgroundColor="White" HorizontalTextAlignment="Center" Margin="0.5"></Label>
