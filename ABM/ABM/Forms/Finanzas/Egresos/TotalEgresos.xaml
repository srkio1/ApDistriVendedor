                                    <Label Text="Mayo" Grid.Column="5" FontSize="Medium" FontAttributes="Bold" BackgroundColor="Green" TextColor="Black" HorizontalTextAlignment="Center" Margin="0.5"/>
                                    <Label Text="Junio" Grid.Column="6" FontSize="Medium" FontAttributes="Bold" BackgroundColor="Green" TextColor="Black" HorizontalTextAlignment="Center" Margin="0.5"/>
                                    <Label Text="Julio" Grid.Column="7" FontSize="Medium" FontAttributes="Bold" BackgroundColor="Green" TextColor="Black" HorizontalTextAlignment="Center" Margin="0.5"/>
                                    <Label Text="Agosto" Grid.Column="8" FontSize="Medium" FontAttributes="Bold" BackgroundColor="Green" TextColor="Black" HorizontalTextAlignment="Center" Margin="0.5"/>
