<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ABM.Forms.Agenda.Listaagenda">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Agregar" Clicked="ToolbarItem_Clicked"/>
        <ToolbarItem Text="Historial" Clicked="ToolbarItem_Clicked_1"/>

    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Estado" HorizontalOptions="End" x:Name="sape"/>

            <ListView x:Name="listAgenda" ItemTapped="ListAgenda_ItemTapped" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding titulo}"
                              TextColor="Blue"
                                  Detail="{Binding fecha, StringFormat='{}{0:dd-MM-yyyy}'}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>